---
const { title, url, pubDate, description, image, tags } = Astro.props;
---
<a href={url} class="group block term-card overflow-hidden hover:border-accent dark:hover:border-accent-light transition-colors duration-200">
  {image && image.url && (
    <div class="overflow-hidden border-b border-term-border-light dark:border-term-border">
      <img src={image.url} alt={image.alt || title} class="w-full h-44 object-cover grayscale group-hover:grayscale-0 transition-all duration-500" />
    </div>
  )}
  <div class="p-5">
    <p class="text-xs text-term-gray dark:text-term-gray mb-2 font-mono">
      <span class="text-accent/50 dark:text-accent-light/40">date: </span>{pubDate.slice(0, 10)}
    </p>
    <h2 class="text-sm font-bold text-gray-800 dark:text-gray-100 mb-2 group-hover:text-accent dark:group-hover:text-accent-light transition-colors leading-snug">
      <span class="text-accent/60 dark:text-accent-light/50 mr-1">â–¸</span>{title}
    </h2>
    {description && <p class="text-xs text-term-gray dark:text-term-gray mb-3 line-clamp-2 leading-relaxed">{description}</p>}
    {tags && tags.length > 0 && (
      <div class="flex flex-wrap gap-1.5">
        {tags.map(tag => (
          <span class="tag-badge">{tag}</span>
        ))}
      </div>
    )}
  </div>
</a>