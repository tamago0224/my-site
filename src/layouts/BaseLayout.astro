---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
const { pageTitle } = Astro.props;
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
  </head>
  <body class="bg-coffee text-gray-800 min-h-screen flex flex-col">
    <Header />
    <main class="flex-grow container mx-auto p-4 md:p-8 bg-white shadow-lg rounded-lg my-8">
      <h1 class="text-4xl font-bold mb-6 text-gray-900">{pageTitle}</h1>
      <slot />
    </main>
    <Footer />
    <script>
      import "../scripts/menu.js";
    </script>
  </body>
</html>
