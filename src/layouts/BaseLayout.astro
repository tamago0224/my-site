---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
const { pageTitle, browserTitle } = Astro.props;
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:ital,wght@0,300;0,400;0,500;0,600;0,700;1,400&display=swap" rel="stylesheet" />
    <title>{browserTitle ? browserTitle : pageTitle}</title>
    <script is:inline>
      // FOUC防止: ページ読込前にダークモードを適用
      (function() {
        const theme = localStorage.getItem('theme');
        if (theme === 'dark' || (!theme && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
          document.documentElement.classList.add('dark');
        }
      })();
    </script>
  </head>
  <body class="bg-term-bg-light dark:bg-term-bg-dark text-gray-800 dark:text-gray-200 min-h-screen flex flex-col transition-colors duration-300 font-mono">
    <Header />
    <main class="flex-grow container mx-auto p-6 md:p-10 my-8 animate-fade-in term-card">
      <div class="flex items-center gap-2 mb-6 text-xs text-term-gray dark:text-term-gray border-b border-term-border-light dark:border-term-border pb-3">
        <span class="text-accent dark:text-accent-light">▶</span>
        <span class="text-accent dark:text-accent-light font-semibold">{pageTitle}</span>
      </div>
      <slot />
    </main>
    <Footer />
    <script>
      import "../scripts/menu.js";
    </script>
  </body>
</html>
