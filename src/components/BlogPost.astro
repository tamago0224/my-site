---
const { title, url, pubDate, description, image, tags } = Astro.props;
---
<a href={url} class="group block glass-card overflow-hidden hover:scale-[1.02] hover:shadow-xl dark:hover:shadow-accent/10 transition-all duration-300">
  {image && image.url && (
    <div class="overflow-hidden">
      <img src={image.url} alt={image.alt || title} class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-500" />
    </div>
  )}
  <div class="p-6">
    <h2 class="text-lg font-bold text-gray-900 dark:text-white mb-2 group-hover:text-accent dark:group-hover:text-accent-light transition-colors">{title}</h2>
    <p class="text-sm text-gray-500 dark:text-gray-400 mb-3">ðŸ“… {pubDate.slice(0, 10)}</p>
    {description && <p class="text-gray-600 dark:text-gray-300 text-sm mb-4 line-clamp-2">{description}</p>}
    {tags && tags.length > 0 && (
      <div class="flex flex-wrap gap-2">
        {tags.map(tag => (
          <span class="tag-badge">{tag}</span>
        ))}
      </div>
    )}
  </div>
</a>